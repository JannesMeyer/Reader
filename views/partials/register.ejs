<% if (typeof message !== 'undefined' && message.length) { %>
<div class="alert-box alert">
  <%= message %>
  <a href="" class="close">&times;</a>
</div>
<% } %>
<form action="/register" method="post">
	<label for="username">Voller Name</label>
	<input type="text" id="fullname" name="fullname" placeholder="Name" required="required" />
	<label for="username">Email</label>
	<input type="email" id="username" name="username" placeholder="Email" required="required" />
	<label for="password">Passwort</label>
	<input type="password" id="password" name="password" placeholder="Passwort" required="required" />
	<input type="password" name="confirm_password" placeholder="Passwort wiederholen" required="required" />
	<a href="/login" data-reveal-id="modalLogin">Bereits angemeldet?</a>
	<input type="submit" class="button large radius" value="Registrieren" />
</form>