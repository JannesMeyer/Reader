<% if (typeof message !== 'undefined') { %>
<p><strong><%= message %></strong></p>
<% } %>
<form>
	<label for="username">Email</label>
	<input type="email" id="username" name="username" placeholder="Email" />
	<label for="password">Passwort</label>
	<input type="password" id="password" name="password" placeholder="Passwort" />
	<input type="password" name="confirm_password" placeholder="Passwort wiederholen" />
	<a href="/login" data-reveal-id="modalLogin">Bereits angemeldet?</a>
	<input type="submit" class="button large radius" value="Registrieren" />
</form>