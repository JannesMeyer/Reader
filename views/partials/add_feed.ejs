<form action="/add-feed" method="post">
	<h4>Neuen Feed hinzufügen</h4>
	<input type="url" name="url" placeholder="Feed-URL" required="required" value="http://rss1.smashingmagazine.com/feed/" />
	<input type="text" name="name" placeholder="Feed-Name" />
	<i>Example: http://rss1.smashingmagazine.com/feed/</i>
	<div id="colorpicker" class="colorpicker">
		<label>Farbe</label>
		<span style="background-color: #798300" data-color="798300"></span>
		<span style="background-color: #298000" data-color="298000"></span>
		<span style="background-color: #008057" data-color="008057"></span>
		<span style="background-color: #007180" data-color="007180"></span>
		<span style="background-color: #002480" data-color="002480"></span>
		<span style="background-color: #610080" data-color="610080"></span>
		<span style="background-color: #800052" data-color="800052"></span>
		<span style="background-color: #800000" data-color="800000"></span>
		<input type="hidden" id="color" name="color" value="" />
	</div>
	<input type="submit" class="button large radius" value="Hinzufügen" />
</form>