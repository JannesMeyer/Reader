<% if (typeof message !== 'undefined') { %>
<div class="alert-box alert">
  <%= message %>
  <a href="" class="close">&times;</a>
</div>
<% } %>
<form action="/login" method="post">
	<label for="username">Email</label>
	<input type="email" id="username" name="username" placeholder="Email" required="required" />
	<label for="password">Passwort</label>
	<input type="password" id="password" name="password" placeholder="Passwort" required="required" />
	<a href="/register" data-reveal-id="modalRegister">Noch nicht angemeldet?</a>
	<input type="submit" class="button large radius" value="Login" />
</form>